
# Gnu Fortran compiler and compiler flags
FC = ifort
CC = icc
# Linker
LINK = $(FC)
# Archiver, for libturbulence.a
#AR = xiar

## OPTIONS FOR OPTIMIZATION
#FCFLAGS = -O3 -ffast-math -march=native -funroll-loops
## OPTIONS FOR OPTIMIZATION AND OPENMP
#FCFLAGS = -O3 -ffast-math -march=native -funroll-loops #-fopenmp
FCFLAGS =  -O3 -ipo -xHost -openmp
## OPTIONS FOR DEBUGGING
#FCFLAGS = -g -fbounds-check -fbacktrace
CCFLAGS = $(FCFLAGS)

## PATH TO GOTM TURBULENCE
GOTMDIR      = $(PWD)/turbulence
GOTMLIB       =  -L$(GOTMDIR)/lib -lturbulence
GOTMINCS      = -I$(GOTMDIR)

## PATH TO NETCDF
#NETCDFINC = -I/usr/include
#NETCDFLIB = -L/usr/lib64 -lnetcdf -lnetcdff
NETCDFINC=-I$(NETCDF_INC)
NETCDFLIB = -L$(NETCDF_LIB) -lnetcdf -lnetcdff

